<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/imageButtonStopRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@android:drawable/btn_star" />

    <ImageButton
        android:id="@+id/imageButtonForwardRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonStopRecord"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="55dip"
        android:maxWidth="55dip"
        android:scaleType="centerInside"
        android:src="@drawable/forward_play" />

    <ImageButton
        android:id="@+id/imageButtonRightRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonBackwardRecord"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@+id/imageButtonStopRecord"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="55dip"
        android:maxWidth="55dip"
        android:scaleType="centerInside"
        android:src="@drawable/right_play" />

    <ImageButton
        android:id="@+id/imageButtonBackwardRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButtonStopRecord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="55dip"
        android:maxWidth="55dip"
        android:scaleType="centerInside"
        android:src="@drawable/backward_play" />

    <ImageButton
        android:id="@+id/imageButtonLeftRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="35dp"
        android:layout_toLeftOf="@+id/imageButtonStopRecord"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxHeight="55dip"
        android:maxWidth="55dip"
        android:scaleType="centerInside"
        android:src="@drawable/left_play" />

    <Switch
        android:id="@+id/swIdStartRemember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/swPtRemember" />

    <Switch
        android:id="@+id/swIdStratMove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/swIdStartRemember"
        android:layout_below="@+id/swIdStartRemember"
        android:text="@string/swPtStratMove" />

</RelativeLayout>